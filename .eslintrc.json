{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "warn",
    "no-unused-vars": "warn",
    "comma-dangle": ["error", "never"],
    "curly": ["error", "all"],
    "no-var": ["error"],
    "no-cond-assign": ["error", "always"],
    "init-declarations": "off"
  },
  "ignorePatterns": [
    "node_modules/",
    "packages/backend-cms-server/resources/",
    "packages/backend-cms-server/public/"
  ]
}
