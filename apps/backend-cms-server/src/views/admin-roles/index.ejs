<div class="page-body">
    <%- include('../partials/nav') %>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="mt-2 mb-2"><%- include('../partials/messages') %></div>
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center p-3">
                        <%- include('../partials/searchForm') %>
                        <% if(checkPermissions(user, "user-management.admin-roles.create") == true) { %>
                            <a class="btn btn-primary main-pg-btn btn-icon-text pull-right px-2" href="/admin-roles/create" role="button">
                                <i class="fa fa-plus"> </i> Add New</a
                            >
                        <% } %>
                    </div>
                    <div class="table-responsive p-2">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">SN</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Slug</th>
                                    <% if(checkPermissions(user, "user-management.admin-roles.edit") == true ||
                                    checkPermissions(user, "user-management.admin-roles.delete") == true) { %>
                                    <th scope="col">Action</th>
                                    <% } %>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(docs.length > 0){ sn = (pageNum-1) * pageLimit; docs.forEach(function(role) { %>
                                                            <tr>
                                                                <td scope="row"><%= sn += 1 %></td>
                                                                <td><%= role.name ? role.name : nil %></td>
                                                                <td><%= role.slug ? role.slug : nil %></td>
                                                                <td>
                                                                    <% if((checkPermissions(user, "user-management.admin-roles.edit") == true ||
                                                                    checkPermissions(user, "user-management.admin-roles.delete") == true) && role.slug
                                                                    !== "superadmin") { %> <% if(checkPermissions(user,
                                                                    "admin-roles.admin-roles.edit") == true) { %>
                                                                    <a
                                                                        class="btn btn-light btn-sm p-1" style="margin-right: 5px;"
                                                                        href="/admin-roles/<%= role._id %>"
                                                                        role="button"
                                                                    >
                                                                        <i class="fa fa-edit"></i>
                                                                        Edit</a>
                                                                    <% } %> <% if(checkPermissions(user, "user-management.admin-roles.delete") ==
                                                                    true) { %>
                    <button class="btn btn-danger btn-sm p-1" type="button" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal"
                                                                        data-href="/admin-roles/<%= role.id %>?_method=delete"
                                                                        data-title="Delete Role"
                                                                        data-description="Are you sure you want to delete?"><i class="fa fa-trash"></i> Delete</button>

                                                                    
                                                                    <% } %> <% } %> <% if(checkPermissions(user,
                                                                    "user-management.admin-roles.add-users") == true) { %>
                                                                     <button class="btn btn-success btn-sm p-1" type="button" data-bs-toggle="modal" 
                                                                    data-bs-target="#addUserModal-<%= role.id %>" ><i class="fa fa-plus"></i> Add Admins</button>

                                                                    <%- include('./includes/addUsersModal', {role}) %> 
                                                                    <% } %>
                                                                </td>
                                                            </tr>
                                                            <% }); } else{ %>
                                                            <tr>
                                                                <td colspan="4" style="text-align: center">No Records found.</td>
                                                            </tr>
                                                            <% } %>
                            </tbody>
                        </table>
                    </div>
                    <div class="mb-3">
                        <%- include('../partials/pagination') %>
                        </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>
