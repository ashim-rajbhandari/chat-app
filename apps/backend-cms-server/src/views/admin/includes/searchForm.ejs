<div class="card-header d-flex justify-content-between align-items-center p-3">
    <form class="d-flex align-items-center" action="<%- url %>" method="get" autocomplete="off">
        <div class="">
            <label class="sr-only" for="keyword">keyword</label>
            <input class="form-control" id="keyword" type="text" value="<%= query ? query.keyword : '' %>" placeholder="Keyword" name="keyword">
        </div>
        <div class="">
            <button class="btn btn-primary px-2 mx-1" type="submit">Search</button>
        </div>
        <div class="">
            <a href="<%- url %>" class="btn btn-light px-2" >Clear</a>
        </div>
    </form>
    <% if(checkPermissions(user, "user-management.admin-roles.create") == true) { %>
        <a class="btn btn-primary main-pg-btn btn-icon-text pull-right px-2" href="/admin-roles/create" role="button">
            <i class="fa fa-plus"> </i> Add New</a
        >
    <% } %>
</div>