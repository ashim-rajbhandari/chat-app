<div class="mb-3">
    <div class="row align-items-baseline mt-3">
        <div class="col-lg-6">
            <div class="inner__border">
                <label class="col-form-label">New Password</label>
                <span style="color: red">*</span>
                <input type="password" class="form-control" id="password" name="newPassword" 
                    minlength="<%= getCmsConfig(configData,'Minimum Password Length') %>"
                    required
                >
            </div>
        </div>
    </div>
</div>

<div class="mb-3">
    <div class="row align-items-baseline mt-3">
        <div class="col-lg-6">
            <div class="inner__border">
                <label class="col-form-label">Confirm Password</label>
                <span style="color: red">*</span>
                <input type="password" class="form-control" id="password" name="confirmPassword" 
                    minlength="<%= getCmsConfig(configData,'Minimum Password Length') %>"
                    required
                >
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-end">
    <button class="btn btn-primary me-2 px-3" type="submit">Save</button>
    <a href="/app-users" role="button">
        <button class="btn btn-light px-3" type="button">
            Cancel
        </button>  
    </a>
</div>