<div class="page-body">
    <%- include('../partials/nav') %>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="mt-2 mb-2"><%- include('../partials/messages') %></div>
        <div class="row">
            <div class="col-sm-12 col-xl-12">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-body">
                                <form action="/profile-update/<%= data._id %>?_method=PUT" method="post" class="theme-form mega-form" enctype="multipart/form-data" >
                                    <div class="mb-3">
                                        <div class="row align-items-baseline mt-3">
                                            <div class="col-lg-6">
                                                <div class="inner__border">
                                                    <label class="col-form-label">First Name</label>
                                                    <span style="color: red">*</span>
                                                    <input type="text" class="form-control " name="first_name" value="<%= inputData && inputData.first_name ? inputData.first_name :  data.first_name  %>" required />
                                                </div>
                                            </div>

                                            <div class="col-lg-6">
                                                <div class="inner__border">
                                                    <label class="col-form-label">Last Name</label>
                                                    <span style="color: red">*</span>
                                                    <input type="text" class="form-control" name="last_name" value="<%= inputData && inputData.last_name ? inputData.last_name : data.last_name  %>" required />
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <div class="row align-items-baseline mt-3">
                                            <div class="col-lg-6">
                                                <div class="inner__border">
                                                    <label class="col-form-label">Email</label>
                                                    <span style="color: red">*</span>
                                                    <input type="email" class="form-control " name="email"
                                                    value="<%= inputData && inputData.email ? inputData.email : data.email  %>"
                                                    required/>
                                                </div>
                                            </div>

                                            <div class="col-lg-6">
                                                <div class="inner__border">
                                                    <label class="col-form-label">Username</label>
                                                    <span style="color: red">*</span>
                                                    <input type="text" class="form-control " name="username"
                                                    value="<%= inputData && inputData.username ? inputData.username : data.username %>"
                                                    required/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <div class="row align-items-baseline mt-3">
                                            <div class="col-lg-6">
                                                <div class="inner__border">
                                                    <label class="col-form-label">Mobile No</label>
                                                    <span style="color: red">*</span>
                                                    <input type="tel" class="form-control onlynum" name="mobile_num"
                                                    maxlength="13" required
                                                    value="<%= inputData && inputData.mobile_num ? inputData.mobile_num : data.mobile_num %>"/>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="inner__border">
                                                    <label class="col-form-label">Telephone No</label>
                                                    <input type="tel" class="form-control onlynum"
                                                    name="contact_number" maxlength="13"
                                                    value="<%= inputData && inputData.contact_number ? inputData.contact_number : data.contact_number %>"
                                                    />
                                                </div>
                                            </div>
                                        </div>
                                        <script>
                                            function isNumberKey(evt){
                                            var charCode = (evt.which) ? evt.which : evt.keyCode;
                                            if (charCode != 46 && charCode != 45 && charCode > 31
                                            && (charCode < 48 || charCode > 57))
                                            return false;
                                
                                             return true;
                                        }
                                            </script>
                                    </div>

                                    <div class="mb-3">
                                        <div class="row align-items-baseline mt-3">
                                            <div class="col-lg-6">
                                                <div class="inner__border">
                                                    <label class="col-form-label">Fax</label>
                                                    
                                                    <input type="tel" class="form-control onlynumIncludeDash" name="fax"
                                                    maxlength="13"
                                                    value="<%= inputData && inputData.fax ? inputData.fax : data.fax %>" />
                                                </div>
                                            </div>
                                            
                                            <div class="col-lg-6">
                                                <div class="inner__border">
                                                    <label class="col-form-label">Image (Upto 2mb)</label>
                                                    <input class="form-control" type="file" id="image" name="image" style="padding: 4px;" accept="image/png, image/jpeg, image/jpg" />
                                                        <img alt="avatar" class="mt-2" height="100px" width="100px" src="<%= data.image ? '/backend/uploads/admins/'+data.image : '/backend/asset-cms/images/avtar/avatar-1.jpg' %>" />
                                                </div>
                                            </div>   
                                        </div>
                                    </div>  
                                    
                                    <div class="mb-3">
                                        <div class="row align-items-baseline mt-3">
                                            <div class="col-lg-6">
                                                <div class="inner__border">
                                                    <label class="col-form-label pt-0" for="exampleInputPassword1">Current Password</label>
                                                    <input class="form-control" id="current_password" type="password"
                                                    name="current_password" maxlength="16"
                                                    value="<%= inputData && inputData.current_password ? inputData.current_password : '' %>"
                                                    />
                                                </div>
                                            </div>
                                            
                                            <div class="col-lg-6">
                                                <div class="inner__border">
                                                    <label class="col-form-label pt-0" for="exampleInputPassword1">New Password</label>
                                                    <input class="form-control" id="password" type="password" name="password"  minlength="<%= getCmsConfig(configData,'Minimum Password Length') %>">
                                                </div>
                                            </div>   
                                        </div>
                                    </div> 
                                    <div class="mb-3">
                                        <div class="row align-items-baseline mt-3">
                                            <div class="col-lg-6">
                                                <div class="inner__border">
                                                    <label class="col-form-label pt-0" for="exampleInputPassword1">Confirm Password</label>
                                                    <input class="form-control" id="confirmPassword" type="password"   name="confirm_password" 
                                                    minlength="<%= getCmsConfig(configData,'Minimum Password Length') %>">
                                                </div>
                                            </div>   
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-end" >
                                        <button class="btn btn-primary me-2 px-3 submit" type="submit">Save</button>
                                        <a  href="<%= session?.cancelUrl || '/admins'%>" role="button">
                                        <button class="btn btn-light px-3" type="button">
                                            Cancel
                                            </button>
                                            </a>
                                    </div>
                                </form>
                                
                            </div>   
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


