<!-- Main Content-->
<div class="main-content side-content pt-5">
    <div class="container-fluid">
        <div class="inner-body">

            <!-- Page Header -->
            <form action="/email-templates" method="post">
                <div class="page-header sticky-header">
                    <div>
                        <h2 class="main-content-title tx-24 mg-b-5">
                            <%= translateLanguage(pageTitle, session.translationdata,module) %>
                        </h2>
                        <%- include('../partials/breadcrumb') %>
                    </div>
                    <div class="d-flex align-items-center justify-content-end">
                        <button class="btn main-save-btn btn-icon-text my-2 mr-2" type="submit">
                            <%= translateLanguage('Save', session.translationdata,module) %>
                        </button>

                        <a href="/email-templates" role="button">
                            <button type="button" class="btn main-cancel-btn my-2 mr-2">
                                <%= translateLanguage('Cancel', session.translationdata,module) %>
                            </button>
                        </a>
                    </div>
                </div>
            <!-- End Page Header -->
            <!-- Row -->
                <div class="row row-sm">
                    <div class="col-lg-12">
                        <%- include('../partials/messages') %>
                            <div class="card custom-card">
                                    <div class="card-body">
                                        <div class="inner__card_b1">
                                            <div class="row align-items-baseline mt-3">
                                                <div class="col-lg-12">
                                                    <div class="inner__border">
                                                        <div class="form-group form-check d-flex align-items-baseline">
                                                            <p class="inner__card cke_required">
                                                                <b>
                                                                    <%= translateLanguage('Title',
                                                                        session.translationdata,module) %>
                                                                </b>
                                                                <span style="color:red;">*</span></b>
                                                            </p>
                                                            </p>
                                                            <input type="text" maxlength="50"
                                                                value='<%= inputData && inputData.title ? inputData.title : '' %>'
                                                                class="form-control" id="title" name="title" required>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>

                                            <div class="row align-items-baseline ">
                                                <div class="col-lg-12">
                                                    <div class="inner__border">
                                                        <div class="form-group form-check d-flex align-items-baseline">
                                                            <p class="inner__card">
                                                                <b>
                                                                    <%= translateLanguage('Code',
                                                                        session.translationdata,module) %>
                                                                </b>
                                                                <span style="color:red;">*</span></b>
                                                            </p>
                                                            </p>
                                                            <input type="text" maxlength="50"
                                                                value='<%= inputData && inputData.code ? inputData.code : '' %>'
                                                                class="form-control" id="code" name="code" required>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>


                                            <div class="row align-items-baseline ">
                                                <div class="col-lg-12">
                                                    <div class="inner__border">
                                                        <div class="form-group form-check d-flex align-items-baseline">
                                                            <p class="inner__card">
                                                                <b>
                                                                    <%= translateLanguage('Subject',
                                                                        session.translationdata,module) %>
                                                                </b>
                                                                <span style="color:red;">*</span></b>
                                                            </p>
                                                            </p>
                                                            <input type="text" maxlength="50"
                                                                value='<%= inputData && inputData.subject ? inputData.subject : '' %>'
                                                                class="form-control" id="subject" name="subject" required>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                            <div class="row align-items-baseline ">

                                                <div class="col-lg-12">
                                                    <div class="inner__border">
                                                        <div class=" form-check d-flex align-items-baseline">
                                                            <p class="inner__card">
                                                                <b>
                                                                    <%= translateLanguage('Body',
                                                                        session.translationdata,module) %>
                                                                </b>
                                                                <span style="color:red;">*</span></b>
                                                            </p>
                                                            <div class="ext-textarea">
                                                                <textarea class="form-control tinymce" name="body"
                                                                    type="text" id="email_body">
                                                                    <%= inputData && inputData.body ? inputData.body : '' %>
                                                                </textarea>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                            </div>
                    </div>
                </div>
            </form>
        </div>
        <!-- End Row -->
    </div>
</div>
<!-- End Main Content-->
<style>
    .ck-content {
        height: 239px !important;
    }
</style>