<div class="page-body">
    <%- include('../partials/nav') %>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="mt-2 mb-2"><%- include('../partials/messages') %></div>
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <form class="theme-form mega-form" action="/email-templates/<%= data._id %>?_method=PUT" method="post">

                            <div class="mb-3">
                                <div class="row align-items-baseline mt-3">
                                    <div class="col-lg-6">
                                        <div class="inner__border">
                                            <label class="col-form-label">Title</label>
                                <span style="color: red">*</span>

                                <input type="text" class="form-control" id="title" value="<%= data.title %>" name="title" maxlength="50" required />
                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <div class="inner__border">
                                            <label class="col-form-label"> Code</label>
                                <span style="color: red">*</span>

                                <input type="text" class="form-control" id="code" maxlength="50" value="<%= data.code %>" name="code" readonly />
                                        </div>
                                    </div>
                                </div>
                            </div>
                         
                            <div class="mb-3">
                                <div class="row align-items-baseline mt-3">
                                    <div class="col-lg-6">
                                        <div class="inner__border">
                                            <label class="col-form-label">Subject</label>
                                            <span style="color: red">*</span>
            
                                            <input
                                                type="text"
                                                class="form-control"
                                                id="subject"
                                                value="<%= data.subject %>"
                                                name="subject"
                                                maxlength="50"
                                                required
                                            />
                                        </div>
                                    </div>
                                
                                </div>
                                
                            </div>
                            <div class="mb-3">
                                <label class="col-form-label">Body</label>
                                <span style="color: red">*</span>

                                <div class="ext-textarea">
                                    <textarea class="form-control tinymce ck_editor" name="body" type="text" style="height: 250px;"><%= data.body %></textarea>
                                </div>
                            </div>
                            <div class="d-flex justify-content-end">
                                <button class="btn btn-primary me-2 px-3" type="submit">Save</button>

                                <a href="/email-templates" role="button"> 
                                    <button class="btn btn-light px-3" type="button">
                                        Cancel 
                                    </button>
                                </a>
                            </div>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>
